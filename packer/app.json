{
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `my_project_id`}}",
            "image_name": "reddit-app-{{timestamp}}",
            "image_family": "reddit-app",
            "source_image_family": "ubuntu-1604-lts",
            "zone": "europe-west1-b",
            "ssh_username": "appuser",
