{
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `my_project_id`}}",
            "image_name": "reddit-full-{{timestamp}}",
            "image_family": "reddit-full",
            "source_image_family": "ubuntu-1604-lts",
            "zone": "europe-west1-b",
            "ssh_username": "appuser",
            "machine_type": "{{user `my_machine_type`}}",
            "image_description" : "Packer puma server immutable",
            "disk_size" : "10",
            "tags" : "puma-server",
            "preemptible" : "true"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/install_ruby.sh",
            "execute_command": "sudo {{.Path}}"
        },
        {
            "type": "shell",
            "script": "scripts/install_mongodb.sh",
            "execute_command": "sudo {{.Path}}"
        },
        {
            "type": "shell",
            "script": "scripts/deploy_app.sh",
            "execute_command": "sudo {{.Path}}"
        },
	{
            "type": "file",
            "source": "/home/tgz/revard_infra/packer/scripts/puma.service",
            "destination": "/home/appuser/puma.service"
        },
        {
            "type": "shell",
            "script": "scripts/puma_start.sh",
            "execute_command": "sudo {{.Path}}"
        }

    ]
}

